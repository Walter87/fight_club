- model_class = Fighter
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:avatar)
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:first_name)
      %th= model_class.human_attribute_name(:last_name)
      %th= model_class.human_attribute_name(:description)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - fighters.each do |fighter|
      %tr
        %td.round-image-50= link_to image_tag(fighter.avatar.url(:thumb)),fighter_path(fighter)
        %td= link_to fighter.id, fighter_path(fighter)
        %td= fighter.first_name
        %td= fighter.last_name
        %td= fighter.description
        %td=l fighter.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_fighter_path(fighter), :class => 'btn btn-default btn-xs'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), fighter_path(fighter), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_fighter_path, :class => 'btn btn-primary'
